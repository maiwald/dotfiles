[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>

[color]
  status = auto
  branch = auto
  diff = auto

[alias]
  g = !git --no-pager log --graph --oneline --decorate --abbrev-commit --max-count=25 --pretty=format:\"%C(yellow)%h -%C(red)%d %C(reset)%s %C(blue)(%ar) %C(green)%an %C(reset)\"

[core]
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore
